{% extends 'layout/base.html.twig' %}

{% block title %} Ele.click Home {% endblock %}

{% block body %}

{% include 'layout/navbar.html.twig' %}

{% include 'component/custom_type_message_top_fixed.html.twig' %}

<header class="bg-dark" style="height: 90vh;">
    <div class="container px-4 px-lg-5 h-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end mb-3">
                <h1 class="text-white font-weight-bold">
                    Short URLs
                </h1>
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white mb-5">
                    Short Link is a free tool to shorten a URL or reduce a link. Use our URL Shortener to create a
                    shortened link.
                </p>

                <form action="{{path('app_link_new')}}" method="post" class="px-2">

                    <div class="input-group mb-1">
                        <input type="text" class="form-control" placeholder="Paste your long link here"
                            style="height: 46px; border-radius: 0;" aria-label="URL" aria-describedby="URL" name="url"
                            required>
                        <button class="btn btn-outline-success" type="submit" id="URL"
                            style="height: 46px; border-radius: 0;">Shorten Link</button>
                    </div>

                    <small class="text-secondary">The short link is valid for 2 Years on free plan!</small>

                    {% if token is not defined %}
                    <p class="mt-3">
                        <small class="text-secondary" style="font-size: 13px;">
                            By clicking Shorten URL, I agree to the <a class="text-white-50" href="#">Terms of
                                Service</a>, <a href="#" class="text-white-50">Privacy Policy</a> and
                            <a href="#" class="text-white-50">Use of Cookies</a>.
                        </small>
                    </p>
                    {% endif %}
                </form>

                <div class="mt-5 px-2">
                    {% if token is defined and token %}

                    {% set link = app.request.schemeAndHttpHost ~ '/' ~ token %}

                    <div class="p-2 py-3 bg-light shadow">
                        <p class="pt-3">
                            <small>URL has been shorten.</small>
                        </p>
                        <p>
                            <span class="d-color"> {{ link }}</span>
                            <span class="bi bi-clipboard-fill text-danger ms-2 pointer"></span>
                            <a href="{{link}}" class="text-primary">
                                <span class="bi bi-box-arrow-up-right ms-2 pointer"></span>
                            </a>
                        </p>
                        <p>
                            <span class="bi bi-twitter text-secondary ms-2 pointer"></span>
                            <span class="bi bi-facebook text-secondary ms-2 pointer"></span>
                        </p>
                    </div>

                    {% endif %}
                </div>

            </div>
        </div>
    </div>
</header>

<div id="cb-cookie-banner" class="alert alert-light text-center mb-0 small" role="alert">
    &#x1F36A; This website uses cookies to ensure you get the best experience on our website.
    <a href="{{path('app_legal_privacy_policy')}}" target="blank" rel="nofollow,noindex">Learn more</a>
    <button type="button" class="btn btn-primary btn-sm ms-3" onclick="window.cb_hideCookieBanner()">
        Okay
    </button>
</div>

{% include 'layout/footer.html.twig' %}

{% endblock %}