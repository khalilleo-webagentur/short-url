{% extends 'layout/base.html.twig' %}

{% block title %} Social-Media Profiles Edit {% endblock %}

{% block body %}

{% include 'layout/navbar.html.twig' %}

{% include 'component/custom_type_message_top_fixed.html.twig' %}

<div class="container-fluid">

    <div class="row py-3 d-dark-color shadow-sm">
        <div class="col-6 col-lg-6">
            <h5 class="text-white-50 pt-2">Social-Media Profiles Edit</h5>
        </div>

        <div class="col-6 col-lg-6">
            <a href="#" class="float-end text-secondary text-decoration-none fs-15 pt-2">
                Close <span class="bi bi-x-square-fill ps-1 small"></span>
            </a>
        </div>
    </div>

    <div class="row pb-5 mt-lg-5 mt-3 mb-5 justify-content-center">
        <div class="col-lg-6">
            <div class="row row-cols-1 g-3">
                <div class="col">
                    <div class="card d-dark-color ">
                        <div class="card-body">
                            <form class="py-3" action="#" method="post">
                                {% set n = index is defined and index ? index : 77 %}
                                <div class="mb-3">
                                    <label for="iName{{n}}" class="form-label">Profile Name:</label>
                                    <input type="text" class="form-control" id="iName{{n}}" placeholder="Group name (required)" name="iName"
                                        value="Khalilleo">
                                    <small class="text-secondary">
                                        Alias might contain only dash (-) and numbers.
                                    </small>
                                </div>
                            
                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="checkbox" name="delete" id="delete{{n}}">
                                    <label class="form-check-label text-white-50" for="delete{{n}}">
                                        Delete this Social-Media "Twitter" permanentally.
                                    </label>
                                </div>
                            
                                <div class="gap-2">
                                    <button class="btn btn-primary px-3" type="submit">
                                        save <span class="bi bi-check2-circle"></span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% include 'layout/footer.html.twig' %}

{% endblock %}