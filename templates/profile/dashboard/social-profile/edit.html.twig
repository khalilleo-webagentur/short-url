{% extends 'layout/base.html.twig' %}

{% block title %} Social-Media Profile Edit {% endblock %}

{% block body %}

    {% include 'layout/navbar.html.twig' %}

    {% include 'component/custom_type_message_top_fixed.html.twig' %}

    <div class="container-fluid min-vh-100 mt-4">

        <div class="row justify-content-center mt-lg-5 mb-2">
            <div class="col col-lg-5">
                <h6 class="text-white-50">Social<span class="md-d-none">-Media</span> Profile Edit</h6>
            </div>

            <div class="col col-lg-1">
                <a href="{{ path('app_dashboard_social_profile_index', {profile: socialProfileSetting.mainName}) }}"
                   class="float-end text-secondary text-decoration-none fs-15">
                    <span class="md-d-none">Close</span>
                    <span class="bi bi-x-square-fill ps-1 small"></span>
                </a>
            </div>
        </div>

        <div class="row pb-5 mb-5 justify-content-center">
            <div class="col-lg-6">
                <div class="row row-cols-1 g-3">
                    <div class="col">
                        <div class="card d-dark-secondary-color d-dark-border-color">
                            <div class="card-body">
                                <form class="py-3"
                                      action="{{ path('app_dashboard_social_profile_store', {id:socialProfile.id}) }}"
                                      method="post">
                                    <div class="mb-3">
                                        <label for="iName" class="form-label">Name:</label>
                                        <input type="text" class="form-control" id="iName" placeholder="Name (required)"
                                               name="iName" value="{{ socialProfile.platform }}" required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="iUsername" class="form-label">Username:</label>
                                        <input type="text" class="form-control" id="iUsername"
                                               placeholder="Username (required)" name="iUsername"
                                               value="{{ socialProfile.username }}" required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="iURL" class="form-label">URL:</label>
                                        <input type="text" class="form-control" id="iURL" placeholder="URL (required)"
                                               name="iURL" value="{{ socialProfile.url }}" required>
                                    </div>

                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" name="delete" id="delete">
                                        <label class="form-check-label text-white-50 fs-15" for="delete">
                                            Delete this Social-Media Link "{{ socialProfile.platform }}" and all related
                                            Statistics permanently.
                                        </label>
                                    </div>

                                    <div class="gap-2">
                                        <button class="btn btn-outline-success px-3" type="submit">
                                            Save changes <span class="bi bi-check"></span>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <p class="my-3 fs-14">
                            <a href="{{ path('app_dashboard_social_profile_index', {profile: socialProfileSetting.mainName}) }}"
                                    class="small text-decoration-none">
                                <span class="bi bi-arrow-left-circle-fill pe-1"></span> Back to Social-Profile
                            </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'layout/footer.html.twig' %}

{% endblock %}