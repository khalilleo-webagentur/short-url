<div class="modal fade" id="socialProfileModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="socialProfileModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title text-white-50 fs-5" id="socialProfileModalLabel">Add new Social Link</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <form action="{{path('app_dashboard_social_profile_new')}}" method="post">
        <div class="modal-body">
          <div class="mb-3">
            <label for="iSource" class="form-label">Name:</label>
            <input type="text" class="form-control" id="iSource" placeholder="Twitter" name="iSource" required
              autofocus>
          </div>
          <div class="mb-3">
            <label for="iName" class="form-label">Username:</label>
            <input type="text" class="form-control" id="iName" placeholder="__khalilleo" name="iName" required>
          </div>

          <div class="mb-3">
            <label for="iUrl" class="form-label">Link to your Profile:</label>
            <input type="text" class="form-control" id="iUrl" placeholder="https://twitter.com/__khalilleo" name="iUrl"
              required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success">Add Link</button>
        </div>
      </form>

    </div>
  </div>
</div>