<div class="modal fade" id="socialProfileSettingModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="socialProfileSettingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title text-white-50 fs-5" id="socialProfileSettingModalLabel">Social Profile</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form action="{{ path('app_dashboard_social_profile_setting_store_alias') }}" method="post">
                <div class="modal-body">
                    <div class="mb-0">
                        <p class="text-secondary">The green part will be your username and will be shown in URL.</p>
                    </div>
                    <div class="mb-3">
                        <label for="iAlias" class="form-label">Profile name:</label>
                        <input type="text" class="form-control" id="iAlias"
                               placeholder="{{ socialProfileSetting.mainName }}" name="iAlias" required
                               autofocus>
                        <small class="text-secondary">
                            {{ app.request.schemeAndHttpHost ~ '/u/' }}<i
                                    class="text-success">{{ socialProfileSetting.mainName }}</i>
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-success">Update Profile Name</button>
                </div>
            </form>

        </div>
    </div>
</div>