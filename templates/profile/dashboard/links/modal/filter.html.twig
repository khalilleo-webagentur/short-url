<div class="modal fade" id="filterModel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="filterLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title text-white-50 fs-5" id="filterLabel">Links Filter</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form action="{{ path('app_links_filter') }}" method="post">
                <div class="modal-body">

                    {# <div class="row">
            <div class="col-lg-8">
              <div class="mb-2">
                <input type="text" class="form-control text-white-50" id="dateFrom" placeholder="{{dateFrom}}"
                  title="Date from"
                  value="{{dateFrom}}" name="dateFrom" required>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="mb-2">
                <input type="text" class="form-control text-white-50" id="timeFrom" placeholder="00:00" value="00:00"
                  title="Time from"
                  name="timeFrom" required>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-8">
