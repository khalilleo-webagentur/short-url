                <input type="text" class="form-control text-white-50" id="dateTo" placeholder="{{dateTo}}"
                  title="Date to"
                  value="{{dateTo}}" name="dateTo">
              </div>
            </div>
            <div class="col-lg-4">
              <div class="mb-2">
                <input type="text" class="form-control text-white-50" id="timeTo" placeholder="23:59" value="23:59"
                  title="Time to"
                  name="timeTo" required>
              </div>
            </div>
          </div> #}

                    {% if count(collections) > 0 %}
                        <div class="mb-3">
                            <select class="form-select text-white-50" aria-label="Default select Collections"
                                    name="group">
                                <option value="0" selected>All groups</option>
                                {% for group in collections %}
                                    <option value="{{ group.id }}">{{ group.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    {% endif %}


                    <div class="mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="clicks" id="clicks" checked>
                            <label class="form-check-label text-white-50" for="clicks">
                                Count Link clicks more than one
                            </label>
                        </div>
                    </div>

                    <div class="mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="isPublic" id="isPublic" checked>
                            <label class="form-check-label text-white-50" for="isPublic">
                                Links are public
                            </label>
                        </div>
                    </div>

                    <div class="mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="isFave" id="isFave">
                            <label class="form-check-label text-white-50" for="isFave">
                                Links are Star
                            </label>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-success">Submit</button>
                </div>
            </form>

        </div>
    </div>
</div>