<div class="modal fade modalToRemoveAfterClick" id="exportModal" data-bs-backdrop="static" data-bs-keyboard="false"
     tabindex="-1" aria-labelledby="exportModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title text-white-50 fs-5" id="exportModalLabel">Export Links</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form action="{{ path('app_profile_links_export') }}" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <p class="text-white-50">Please select your preferred format to export all your Links.</p>
                    </div>

                    <div class="mb-3">
                        <p class="text-white-50 mb-1">
                            Select your Option <span class="d-danger-color">*</span>
                        </p>
                        <select required="required" class="form-select text-white-50"
                                aria-label="Default select sExportAsLinks" name="as">
                            <option value="csv">CSV-Format</option>
                            <option value="json" selected>JSON-Format</option>
                        </select>
                        <small class="text-secondary">Format field is required.</small>
                    </div>

                    <div class="mt-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="isAllLinks" id="isAllLinks" checked
                                   disabled>
                            <label class="form-check-label text-white-50" for="isAllLinks">
                                Export all links in all groups
                            </label>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-success rmModal">Export</button>
                </div>
            </form>

        </div>
    </div>
</div>