<div class="modal fade modalToRemoveAfterClick" id="exportModal" data-bs-backdrop="static" data-bs-keyboard="false"
  tabindex="-1" aria-labelledby="exportModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" style="background-color: #1b1b1c;">
      <div class="modal-header">
        <h1 class="modal-title text-white-50 fs-5" id="exportModalLabel">Export Links</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <form action="{{path('app_profile_links_export')}}" method="post">
        <div class="modal-body">
          <div class="mb-3">
            <p class="text-white-50">Select your prefered format to export Links:</p>
          </div>

          <div class="mb-3">
            <p class="text-white-50 mb-1">Select your Option</p>
            <select class="form-select text-white-50" aria-label="Default select sExportAsLinks"
              style="height: 46px; border-radius: 0; background-color: rgb(30, 30, 30) !important;border: 1px solid #535353;color: #f0efef;"
              name="as" required>
              <option selected disabled>---</option>
              <option value="csv">CSV-Format</option>
              <option value="json">JSON-Format</option>
            </select>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-dark" data-bs-dismiss="modal"
            style="border-radius: 2px;height: 40px;">Cancel</button>
          <button type="submit" class="btn btn-warning rmModal" style="border-radius: 2px;height: 40px;">Export</button>
        </div>
      </form>

    </div>
  </div>
</div>