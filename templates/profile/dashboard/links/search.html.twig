{% extends 'layout/base.html.twig' %}

{% block title %} My URLs Search {% endblock %}

{% block body %}

{% include 'layout/navbar.html.twig' %}

{% include 'component/custom_type_message_top_fixed.html.twig' %}

<div class="container-fluid">

    <div class="row py-3 d-dark-color shadow-sm">
        <div class="col-4 col-lg-4">
            <h5 class="text-white-50 pt-2">Search URLs</h5>
        </div>

        <div class="col-4">
            {% include 'profile/dashboard/links/partial/search_form.html.twig' %}
        </div>

        <div class="col-4">
            <a href="{{path('app_profile_my_urls')}}" class="float-end text-secondary text-decoration-none fs-15 pt-2">
                Close <span class="bi bi-x-square-fill ps-1 small"></span>
            </a>
        </div>
    </div>

    <div class="row pb-5">
        <div class="col-lg-12">

            <p class="text-white-50 pt-3 mb-0">Results for keyword "<span class="text-success">{{keyword}}</span>"
                founded "<span class="text-success">{{count(links)}}</span>"
            </p>

            {% if count(links) > 0 %}
            {% include 'profile/dashboard/links/partial/table_content.html.twig' %}
            {% else %}
            <p class="text-white-50 pt-2">
                No data has been found. Please serach only for titles! <br>
            </p>
            {% endif %}

            <p><a href="{{path('app_profile_my_urls')}}" class="small text-decoration-none mt-3">
                    <span class="bi bi-arrow-left-circle-fill pe-1"></span> Back to URLs</a>
            </p>
        </div>
    </div>
</div>

{% include 'profile/dashboard/links/modal/delete.html.twig' %}

{% include 'layout/footer.html.twig' %}

{% endblock %}