<div class="modal fade" id="newGroupModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="newGroupModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title text-white-50 fs-5" id="newGroupModalLabel">Add new Group</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form action="{{ path('app_links_collection_new') }}" method="post">
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="iName" class="form-label">
                            Name: <span class="d-danger-color">*</span>
                        </label>
                        <input type="text" class="form-control" id="iName" placeholder="Type group name" name="iName"
                               required
                               autofocus>
                        <small class="text-secondary">Group name might contain only dash (-) and numbers.</small>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-success">Add Group</button>
                </div>
            </form>

        </div>
    </div>
</div>