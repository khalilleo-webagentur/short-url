<div class="py-1">
    {% if error is defined and error %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <img src="{{ asset('assets/img/svg/exclamation-triangle.svg') }}" alt="Warning" width="18" height="18"
                 style="margin-top: -4px;"> {{ error.messageKey|trans(error.messageData, 'security') }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <img src="{{ asset('assets/img/svg/exclamation-triangle.svg') }}" alt="Warning" width="18" height="18"
                 style="margin-top: -4px;"> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('notice') %}
        <div class="alert alert-notice alert-dismissible fade show" role="alert">
            <img src="{{ asset('assets/img/svg/exclamation-circle.svg') }}" alt="Notice" width="18" height="18"
                 style="margin-top: -4px;"> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <img src="{{ asset('assets/img/svg/check2-circle.svg') }}" alt="Success" width="18" height="18"
                 style="margin-top: -4px;"> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
</div>