<div class="card-body table-responsive bg-white p-0 mb-3">
    <table class="table table-hover text-nowrap">
        <thead>
        <tr class="fs-14">
            <th>#</th>
            <th>{{ 'User'|trans }}</th>
            <th>{{ 'AllowDuplicatedURLs'|trans }}</th>
            <th>{{ 'AllowLinkAlias'|trans }}</th>
            <th>{{ 'AllowRedirect'|trans }}</th>
            <th>{{ 'ResetPrivateClicks'|trans }}</th>
            <th>{{ 'Modified'|trans }}</th>
            <th>{{ 'Created'|trans }}</th>
            <th>{{ 'Action'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for row in settings %}
            <tr class="fs-14">
                <td>{{ row.id }}</td>
                <td>
                    <a href="{{ path('app_admin_user_edit', {id:row.user.id}) }}">
                        {{ row.user.name|capitalize }}
                    </a>
                </td>
                <td>{{ row.allowDuplicatedUrls ? faCircle('text-success') : faCircle('text-light-50') }}</td>
                <td>{{ row.allowLinkAlias ? faCircle('text-success') : faCircle('text-light-50') }}</td>
                <td>{{ row.allowredirectAfterNewLink ? faCircle('text-success') : faCircle('text-light-50') }}</td>
                <td>{{ row.resetPrivateClicks ? faCircle('text-success') : faCircle('text-light-50') }}</td>

                <td title="{{ row.updatedAt|date }}">{{ timeAgo(row.updatedAt) }}</td>
                <td title="{{ row.createdAt|date }}">{{ timeAgo(row.createdAt) }}</td>
                <td>
                    <a href="{{ path('app_admin_setting_edit', {id:row.id}) }}">
                        <span class="fa fa-edit fa-sm"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>