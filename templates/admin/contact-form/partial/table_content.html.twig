<div class="card-body table-responsive bg-white p-0 mb-3">
    <table class="table table-hover text-nowrap">
        <thead>
        <tr class="fs-14">
            <th>ID</th>
            <th>Name</th>
            <th>E-mail</th>
            <th>Subject</th>
            <th>Updated</th>
            <th>Created</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for row in contacts %}
            <tr class="fs-14">
                <td>{{ row.id }}</td>
                <td>{{ row.name|capitalize }}</td>
                <td title="{{ row.remote }}">{{ row.email }}</td>
                <td title="{{ row.message }}">{{ row.subject }}</td>
                <td title="{{ row.updatedAt|date }}">{{ timeAgo(row.updatedAt) }}</td>
                <td title="{{ row.createdAt|date }}">{{ timeAgo(row.createdAt) }}</td>
                <td>
                    <form action="{{ path('app_dashboard_contact_remove_store', {id:row.id}) }}" method="post">
                        <span class="pointer"
                            title="The message will be removed!"
                            onclick="this.closest('form').submit();">
                            {% include 'admin/component/toggle.html.twig' %}
                        </span>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>