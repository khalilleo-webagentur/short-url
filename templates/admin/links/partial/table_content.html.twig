<div class="card-body table-responsive bg-white p-0 mb-3">
    <table class="table table-hover text-nowrap">
        <thead>
            <tr class="fs-14">
                <th>{{ 'URL'|trans }}</th>
                <th>{{ 'Short'|trans }}</th>
                <th>{{ 'User'|trans }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Counter'|trans }}</th>
                <th>{{ 'Public'|trans }}</th>
                <th>{{ 'Updated'|trans }}</th>
                <th>{{ 'Created'|trans }}</th>
                <th>{{ 'Action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for row in links %}
            <tr class="fs-14">
                <td><span title="{{ row.url }}">{{ row.url|slice(0, 20) ~ '...' }}</span></td>
                <td>
                    {% set link = app.request.schemeAndHttpHost ~ '/' ~ row.token %}
                    {{ row.token }} <a href="{{link}}" target="_blank"><span
                            class="fa fa-external-link-alt fa-sm"></span></a>
                </td>
                <td>
                    {% if row.user %}
                    <a href="#">{{row.user.name}}</a>
                    {% else %}
                    ---
                    {% endif %}

                </td>
                <td>{{ row.title ? row.title : '---' }}</td>
                <td>{{ row.counter }}</td>
                <td>{{ row.isPublic ? faThumbsUp() : faThumbsDown() }}</td>

                <td title="{{ row.updatedAt|date }}">{{ timeAgo(row.updatedAt) }}</td>

                <td title="{{ row.createdAt|date }}">{{ timeAgo(row.createdAt) }}</td>

                <td>
                    <a href="#"><span class="fa fa-edit fa-sm pr-2"></span></a>

                    <a href="{{path('app_admin_links_statistics_index', {id:row.id})}}"><span
                            class="fa fa-chart-line text-dark fa-sm pr-2"></span></a>

                    <a href="#"><span class="fa fa-trash text-danger fa-sm pr-2"></span></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>