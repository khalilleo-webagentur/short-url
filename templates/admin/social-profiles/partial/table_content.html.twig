<div class="card-body table-responsive bg-white p-0 mb-3">
    <table class="table table-hover text-nowrap">
        <thead>
        <tr class="fs-14">
            <th>User</th>
            <th>Platform</th>
            <th>Username</th>
            <th>URL</th>
            <th>Updated</th>
            <th>Created</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for row in socialProfiles %}
            <tr class="fs-14">
                <td>
                    <a href="{{ path('app_admin_user_edit', {id:row.user.id}) }}">
                        {{ row.user.name|capitalize }}
                    </a>
                </td>
                <td>{{ row.platform|capitalize }}</td>
                <td>{{ row.username|capitalize }}</td>
                <td>{{ row.url }}</td>

                <td title="{{ row.updatedAt|date }}">{{ timeAgo(row.updatedAt) }}</td>

                <td title="{{ row.createdAt|date }}">{{ timeAgo(row.createdAt) }}</td>

                <td>
                    <a href="#" class="text-danger"><span class="fa fa-edit fa-sm pr-2"></span></a>

                    <a href="#"><span class="fa fa-chart-line text-danger fa-sm pr-2 linkDataId"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>