{% extends 'layout/base_without.html.twig' %}

{% block title %} Sign up {% endblock %}

{% block body %}

    <div class="container-fluid d-dark-color min-vh-100">
        <div class="container p-0">
            <div class="row justify-content-center pt-5">
                <div class="col-lg-4 pt-5">
                    <div class="d-dark-secondary-color rounded-3 p-4">

                        {% include 'component/account_form_back_link.html.twig' %}

                        <div class="text-center pt-3">
                            <a href="{{ app.request.schemeAndHttpHost }}">
                                <img src="{{ asset('assets/img/logo.png?v=1.0') }}" alt="k24.ing">
                            </a>
                            <h4 class="my-1 text-center text-white-50">Get Started</h4>
                            <p class="text-center text-white-50 mb-3 fs-15">Sign up with work email</p>
                        </div>

                        {% include 'component/form_alert.html.twig' %}

                        <form action="{{ path('app_register_new') }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="mb-3">
                                <input class="form-control" type="text" placeholder="Name" aria-label="Full-Name"
                                       name="name" required>
                            </div>

                            <div class="mb-3">
                                <input class="form-control" type="email" placeholder="Email" aria-label="Email"
                                       name="_username" required>
                            </div>

                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" name="confirm" required id="confirm">
                                <label class="form-check-label fs-15" for="confirm">
                                    I accept {{ appName() }}'s <a href="{{ path('app_legal_privacy_policy') }}"
                                                                  class="text-white-50" rel="nofollow">
                                        Privacy Policy
                                    </a>
                                </label>
                            </div>

                            <div class="mb-3">
                                <button class="btn btn-outline-success w-100">
                                    Sign up
                                </button>
                            </div>
                        </form>

                        <div class="my-3 text-center pb-3">
                            <p class="text-white-50 fs-15"> Already have an account?
                                <a href="{{ path('app_login') }}"
                                   class="d-color opacity-08 text-decoration-none">Login</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}