{% extends 'layout/base_without.html.twig' %}

{% block title %} Sign In {% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="container p-0">
        <div class="row justify-content-center pt-5">
            <div class="col-lg-4 pt-5">
                <div class="d-dark-color p-4">

                    <div class="text-center pt-3">
                        <a href="{{app.request.schemeAndHttpHost}}">
                            <img src="{{asset('assets/img/Logo_Text_71x16.png')}}" alt="ELE">
                        </a>

                        <h3 class="my-3 text-center text-white-50">Sign In</h3>

                        <p class="text-center text-white-50 mb-3">
                            Enter your OTP to continue.
                        </p>
                    </div>

                    {% include 'component/form_alert.html.twig' %}

                    <form action="{{ path('app_login') }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="mb-3">
                            <input class="form-control" type="email" placeholder="Email" aria-label="Email"
                                name="_username" required
                                style="height: 46px; border-radius: 0; background-color: #0000001c;border: 1px solid #535353;color: #f0efef;">
                        </div>
                        <div class="mb-3">
                            <input class="form-control" type="text" placeholder="Security code" aria-label="OTP"
                                name="otp" required
                                style="height: 46px; border-radius: 0; background-color: #0000001c;border: 1px solid #535353;color: #f0efef;">
                            <small class="text-secondary">Enter OTP that being sent to you</small>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success w-100" style="height: 46px; border-radius: 0;">Sign
                                In</button>
                        </div>
                    </form>

                    <div class="my-3 pt-3 small text-center">
                        <p class="text-white-50">No OTP yet? <a href="{{path('app_auth')}}"
                                class="d-color text-decoration-none">
                                Request new one!</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}