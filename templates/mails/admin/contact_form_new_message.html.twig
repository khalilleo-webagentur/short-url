{% extends 'mails/layout/base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

{% include 'mails/layout/header.html.twig' %}

<table role="presentation" border="0" cellpadding="0" cellspacing="0" class="body">
    <tr>
        <td></td>
        <td class="container">
            <div class="content">

                <table role="presentation" class="main">

                    <tr>
                        <td class="wrapper">
                            <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                                <tr>
                                    <td>
                                        <p>Hi {{ username|capitalize }},</p>

                                        <p>A new Message from {{appName()}} has been just arrived. Please read the message
                                            and make a Response.</p>

                                        <table role="presentation" border="0" cellpadding="0" cellspacing="0"
                                            class="btn btn-primary">
                                            <tbody>
                                                <tr>
                                                    <td align="left">
                                                        <table role="presentation" border="0" cellpadding="0"
                                                            cellspacing="0">
                                                            <tbody>
                                                                <tr>
                                                                    <td>
                                                                        <a href="{{ absolute_url(path('app_login')) }}"
                                                                            target="_blank">Login</a>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>

                                        <p>This is an automatically generated message, please do not reply to this
                                            sender.</p>

                                        <p>Thanks, <br> The {{ appName() }} Team</p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                </table>

                {% include 'mails/layout/footer.html.twig' %}
            </div>
        </td>
        <td></td>
    </tr>
</table>

{% endblock %}